<table>
  <div class="container">
    <h1>Usu√°rio conectado</h1>
    <div class="row">
      <div class="col-6">
        <label for="access-token">Access Token</label>
        <p id="access-token" style="display: none;">{{accessToken}}
        </p>
        <button
          class="btn btn-sm btn-info"
          onclick="toggleAccessToken()"
        >üîç</button>
      </div>
      <div class="col-6">
        <label for="refresh-token">Refresh Token</label>
        <p id="refresh-token" style="display: none;">{{refreshToken}}
        </p>
        <button
          class="btn btn-sm btn-info"
          onclick="toggleRefreshToken()"
        >üîç</button>
      </div>
      <div class="col-6">
        <label for="display-name">Display Name</label>
        <p>{{user.display_name}}</p>
      </div>
      <div class="col-6">
        <label for="bio">Bio</label>
        <p>{{user.description}}</p>
      </div>
      <div class="col-6">
        <label for="pfp" class="d-block">Profile Picture</label>
        <img src="{{user.profile_image_url}}" alt="Profile Img" width="100" />
      </div>
    </div>
  </div>
</table>

<script>
  function toggleAccessToken() { var accessTokenElement =
  document.getElementById("access-token"); if (accessTokenElement.style.display
  === "none" || accessTokenElement.style.display === "") {
  accessTokenElement.style.display = "block"; } else {
  accessTokenElement.style.display = "none"; } } function toggleRefreshToken() {
  var refreshTokenElement = document.getElementById("refresh-token"); if
  (refreshTokenElement.style.display === "none" ||
  refreshTokenElement.style.display === "") { refreshTokenElement.style.display
  = "block"; } else { refreshTokenElement.style.display = "none"; } }
</script>